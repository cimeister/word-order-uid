#!/bin/bash
 
# Job details
TIME=04:00  # HH:MM (default: 04:00, max: 240:00)
NUM_GPUS=1  # GPUs per node
GPU_MODEL=GeForceGTX1080Ti  # Choices: GeForceGTX1080,GeForceGTX1080Ti,GeForceRTX2080Ti,TeslaV100_SXM2_32GB
NUM_CPUS=1  # Number of cores (default: 1)
CPU_RAM=8000  # RAM for each core (default: 1024)
OUTFILE=eval_seq2seq.out  # default: lsf.oJOBID
 
# Load modules
module load gcc/6.3.0
module load python_gpu/3.8.5 hdf5 eth_proxy
module load geos
module load libspatialindex

DATA_DIR="data-bin-seq2seq-capital"
CHECKPOINT_DIR="checkpoints-seq2seq-capital"
RESULTS_DIR="eval_results_capital" 

# langlist=("fr")
# langlist=("ru-rev" "vi-rev" "en-rev" "de-rev" "fr-rev")
langlist=("ru" "vi" "en" "de" "fr" "ru-rev" "vi-rev" "en-rev" "de-rev" "fr-rev")
# langlist=("fr" "fr-rev")

for lang in "${langlist[@]}"
do
# Submit job
     bsub -W $TIME \
          -n $NUM_CPUS \
          -R "rusage[mem=${CPU_RAM},ngpus_excl_p=${NUM_GPUS}]" \
          -o logs_eval_seq2seq/eval_seq2seq_capital_$lang.out \
          sh eval_seq2seq.sh $DATA_DIR/$lang $CHECKPOINT_DIR/$lang/checkpoint_last.pt $RESULTS_DIR/$lang/last
done
